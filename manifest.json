{
  "name": "AdFree Forever",
  "version": "0.1.0",
  "description": "Unlock the full potential of an ad-free world. Get off the hook against forced advertising and stand up for your rights!",
  "manifest_version": 2,
  "icons": {
    "16": "icons/Icon-16.png",
    "32": "icons/Icon-32.png",
    "48": "icons/Icon-48.png",
    "128": "icons/Icon-128.png"
  },

  "content_scripts": [{
    "css": ["styles.css"],
    "matches": ["https://*/*"]
  }],
  "browser_action": {
    "default_title": "AdFree Forever",
    "default_icon": {
      "16": "icons/Icon-16.png",
      "32": "icons/Icon-32.png",
      "48": "icons/Icon-48.png",
      "128": "icons/Icon-128.png"
    }
  }
}
